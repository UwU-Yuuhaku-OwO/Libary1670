@model Libary1670.Models.Products
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="slider-area">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Cart</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="login_part section_padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <form class="row contact_form" asp-action="ProductDetails" method="post">
                                <div class="col-md-12 form-group p_star">
                                    <input type="hidden" asp-for="Id" />
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <label asp-for="Name">Name: </label>
                                    <input type="text" class="form-control" asp-for="Name" />
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <label asp-for="Price">Price: </label>
                                    <input type="text" class="form-control" asp-for="Price" />
                                </div>



                                <div class="col-md-12 form-group p_star">
                                    <label asp-for="CategoryId" for="Category" class="form-label">Category</label>
                                    <select asp-for="CategoryId" class="form-select" id="Category" name="CategoryId" aria-label="Select category">
                                       @*  @foreach (var category in ViewBag.Category)
                                        {
                                            <option value="@category.Id">@category.NameCat</option>
                                        } *@
                                    </select>
                                </div>



                                <div class="col-md-12 form-group p_star">
                                    <label asp-for="Img">Image: </label>
                                    <input type="Text" class="form-control" asp-for="Img" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <button type="submit" class="btn_3">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>Image Before</h2>
                           @*  <img id="blah" alt="Image Preview" width="400" height="400" src="@Model.Img"> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    </section>
</main>
